{
  "manifest_version": 3,
  "name": "Illustraitor AI Pro",
  "version": "2.0.0",
  "description": "AI иллюстрации для Google Docs с 15+ стилями и системой кредитов",
  "permissions": ["activeTab", "storage"],
  "host_permissions": [
    "https://docs.google.com/document/*",
    "http://127.0.0.1:8000/*",
    "http://localhost:8000/*",
    "https://*.render.com/*",
    "https://api.notion.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://docs.google.com/document/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "options_page": "options.html"
}
